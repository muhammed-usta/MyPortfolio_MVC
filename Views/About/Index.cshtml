@model List<MyPortfolio_MVC.Models.TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Hakkımda</h2>

<table class=" table table-bordered">

    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Fotoğraf</th>
        <th>CV Linki</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" style="width:50px;height:50px" alt="<Referans Görseli" /> @item.ImageUrl</td>
            <td>@item.CvUrl</td>
            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn btn-outline-danger">Sil</a> </td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn btn-outline-info">Güncelle</a> </td>
        </tr>
    }



</table>

<br />
<a href="/About/CreateAbout" class="btn btn-success">Yeni Hakkımda Alanı Ekle</a>


