@model List<MyPortfolio_MVC.Models.TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>İletişim Bilgileri</h2>

<br />
<table class=" table table-bordered">

    <tr>
        <th>#</th>
        <th>Telefon</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactId</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn btn-outline-danger">Sil</a> </td>
            <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn btn-outline-info">Güncelle</a> </td>
        </tr>
    }



</table>

<br />
<a href="/Contact/CreateContact" class="btn btn-success">Yeni İletişim Bilgisi Ekle</a>




