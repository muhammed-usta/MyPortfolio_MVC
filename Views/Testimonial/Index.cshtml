@model List<MyPortfolio_MVC.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}


<h2>Referanslarım</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Adı Soyadı</th>
        <th>Başlık</th>
        <th>Image Url</th>
        <th>Yorum</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td><img src="@item.ImageUrl" style="width:50px;height:50px" alt="<Referans Görseli" /> @item.ImageUrl</td>

            <td>@item.Comment</td>

            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger"> Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-info"> Güncelle</a></td>
        </tr>

    }
</table>

<br />
<a href="/Testimonial/CreateTestimonial/" class="btn btn-outline-success">Yeni Referans Ekle</a>




