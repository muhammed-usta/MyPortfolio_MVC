@model MyPortfolio_MVC.Models.TblSocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Sosyal Medya Güncelle</h2>

<form method="post">
    @Html.HiddenFor(x => x.SocialMediaId)
    <label>Sosyal Medya Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Link</label>
    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary">Güncelle</button>
    <br />

</form>

