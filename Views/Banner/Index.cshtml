@model List<MyPortfolio_MVC.Models.TblBanner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Banner Alanı</h2>

<table class=" table table-bordered">

    <tr>
        <th>#</th>
        <th>Başlık </th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th style="text-align: center;">Görünürlük</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BannerId</td>
            <td>
                @item.Title
                    @if (item.IsShown==true)
                    {
                        <span style="font-size: 12px; color: green;">(Mevcut)</span>
                    }
                </td>
            <td>@item.Description</td>
          
            
            <td><a href="/Banner/DeleteBanner/@item.BannerId" class="btn btn btn-outline-danger">Sil</a> </td>
            <td><a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn btn-outline-info">Güncelle</a> </td>
            <td style="text-align: center;"><a href="/Banner/ShowBanner/@item.BannerId" class="btn btn btn-outline-success" style="margin-right: 10px;">Anasayfa da Göster</a>
            <a href="/Banner/UnShowBanner/@item.BannerId" class="btn btn btn-outline-warning">Anasayfa da Gösterme</a> </td>
        </tr>
    }



</table>

<br />
<a href="/Banner/CreateBanner" class="btn btn-success">Yeni Banner Ekle</a>

